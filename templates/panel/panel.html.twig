{% import "_macros.html.twig" as macros %}

<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    {% block stylesheets %}
      <link href="{{ asset('assets/css/bootstrap.min.css') }}" rel="stylesheet" />
      <link href="{{ asset('assets/css/font-awesome.min.css')}}" rel="stylesheet" />
      <link href="{{ asset('assets/css/style.css')}}" rel="stylesheet" />
      <script type="text/javascript" src="{{ asset('assets/js/jquery-3.2.1.min.js')}}"></script>
      <script type="text/javascript" src="{{ asset('assets/js/popper.min.js')}}"></script>
      <script type="text/javascript" src="{{ asset('assets/js/bootstrap.min.js') }}"></script>
      <script type="text/javascript" src="{{ asset('assets/tinymce/tinymce.min.js') }}"></script>
      <script>
        tinymce.init({
          selector: 'textarea',
          plugin: 'a_tinymce_plugin',
          a_plugin_option: true,
          a_configuration_option: 400
        });
      </script>
    {% endblock %}
    <title>{% block title %}Panel{% endblock %}</title>
  </head>
  <body>
    {% block nav %}
    <div class="container-fluid">
      {% block banner %}
      <div class="row">
        <div class="col-12 panel-banner text-white">
          <span class="banner-text px-3 align-middle">PANEL</span>
        </div>
      </div>
      {% endblock %}
      <div class="row">
        <div class="dropup">
          <button
            class="btn btn-primary"
            id="navigationButton"
            type="button"
            name="navigation"
            data-toggle="dropdown"
            aria-haspopup="true"
            aria-expanded="false"
          >
            <i class="fa fa-bars"></i>
          </button>
          <div class="dropdown-menu" aria-labelledby="navigationButton">
            <a class="dropdown-item" href="{{ path('home') }}">Home</a>
            <a class="dropdown-item" href="{{ path('gallery') }}">Gallery</a>
            <a class="dropdown-item" href="{{ path('post') }}">Posts</a>
            <a class="dropdown-item" href="{{ path('about') }}">About</a>
          </div>
        </div>
      </div>
    </div>
    {% endblock %}
        <div class="container-fluid px-5 panel-content bg-white">
          {% block body %}{% endblock %}
        </div>
    {% block javascripts %}
    <script type="text/javascript" src="{{ asset('assets/animations/navLinksHoverAnim.js') }}"></script>
    {% endblock %}
  </body>
</html>
