{% extends 'base.html.twig' %}

{% block body %}
	<div class="pull-right m-2">
		<div class="dropleft">
			<button 
				class="btn btn-sm btn-outline-primary"
				id="optionsButton"
	            type="button"
	            name="options"
	            data-toggle="dropdown"
	            aria-haspopup="true"
	            aria-expanded="false"
			>
				<i class="fa fa-chevron-left"></i> Options
			</button>
			<div class="dropdown-menu" aria-labelledby="optionsButton">
	            <a class="dropdown-item" href="{{ path('home') }}">Edit</a>
	            <a class="dropdown-item" href="{{ path('gallery') }}">Action2</a>
	            <a class="dropdown-item" href="{{ path('post') }}">Action3</a>
	            <div class="dropdown-divider"></div>
	            <a class="dropdown-item text-danger" href="{{ path('about') }}">Delete</a>
	       	</div>
		</div>
	</div>
	<h1 class="text-danger text-center">{{ post.title }}</h1>
	<p class="text-primary">{{ post.introText|raw }}</p>
{% endblock %}
